@using Bookish.Models.View;
@model BooksViewModel;

@{
    ViewData["Title"] = "Books Catalogue";
}
<div class="text-center">
    <h1 class="display-4">Library Catalogue</h1>
    <ul>
        @{
            foreach (var book in Model.Books)
            {
                <li>Title: @book.Title, Author: @book.Author, Available Copies: @book.AvailableCopies, Total Copies: @book.TotalCopies
                    <a href="/Books/catalogue/@book.BookId">View</a>
                    <a href="/Books/@book.BookId/EditBook">Edit</a>
                    <a href="/Books/@book.BookId/RemoveBook"> Remove</a></li>
            }
        }
    </ul>